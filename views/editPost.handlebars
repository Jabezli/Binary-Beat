<div class="text-center container-fluid w-75">
    <h3>
    {{#if isNewPost}}
    Create Your New Post Below
    {{else}}
    Edit Post
    {{/if}}
    </h3>
    <div class="mb-3 ">
        <label  class="form-label  d-flex align-items-start fs-4">Title</label>
        <input type="text" class="form-control postTitle" required value="{{#if isNewPost}} {{else}}{{post.title}}{{/if}}">
    </div>
    <div class="mb-3">
        <label  class="form-label  d-flex align-items-start fs-4">Share Your Thought</label>
        <textarea class="form-control postBody" required rows="6">{{#if isNewPost}}{{else}}{{post.body}}{{/if}}</textarea>
    </div>
    <button type="button" class="btn btn-primary btn-lg px-20" id="submitBtn">
        {{#if isNewPost}}
        Post
        {{else}}
        Update
        {{/if}}
    </button>
</div>

{{#if isNewPost}}
<script src="/js/createPost.js"></script>
{{else}}
<script src="/js/editPost.js"></script>
{{/if}}